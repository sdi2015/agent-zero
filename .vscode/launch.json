{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug run_ui.py",
      "type": "debugpy",
      "request": "launch",
      "program": "./run_ui.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["--development=true", "-Xfrozen_modules=off"]
    },
    {
      "name": "Debug current file",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": ["--development=true", "-Xfrozen_modules=off"]
    },
    {
      "name": "Debug API",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["services.intel_api:app", "--host", "0.0.0.0", "--port", "8000", "--reload"],
      "justMyCode": true
    }
  ]
}
